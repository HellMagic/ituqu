<% provide(:title, "途趣网 | 注册" %>
<div class="sign">
	<p><i class="icon-user"></i> | <span class='title'>注 册</span></p>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<div class='user_name'>
		<%= f.label '用户名：' %>
		<%= f.text_field :username, autofocus: true %>
	</div>
	<div>
		<%= f.label '邮 箱：' %>
		<%= f.email_field :email, class: 'required email' %>
	</div>
	<div>
		<%= f.label '密 码：' %>
		<%= f.password_field :password, class: 'required', minlength: 6,
												 placeholder: '密码至少六位' %>
	</div>
	<div><%= f.submit "注册", class: "btn btn-primary btn-large" %></div>
	<% end %>
</div>

<script type="text/javascript">
$(function(){
		$("form").validate();
})
</script>


